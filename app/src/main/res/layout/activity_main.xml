<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/hello"
        android:textSize="47sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/weltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welText"
        android:textSize="42sp"
        android:layout_below="@+id/hello"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
    />

    <Button
        android:id="@+id/library"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/weltext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Access Library"
        android:textSize="30dp"
    />

    <Button
        android:id="@+id/note"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/library"
        android:text="See Notes"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/whatsNew"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/note"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Whats New"
        android:textSize="30dp"
        />
</RelativeLayout>